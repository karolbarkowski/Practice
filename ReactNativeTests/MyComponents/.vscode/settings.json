{
   "files.exclude": {
      "**/.git": true,
      "node_modules": true,
      "ios": true,
      "android": true,
      ".babelrc": true,
      ".buckconfig": true,
      ".flowconfig": true,
      ".gitignore": true,
      ".gitattributes": true,
      ".watchmanconfig": true,
      "index.ios.js": true,
      "jsconfig.json": true,
      "app.json": true
   },
   "editor.tabSize": 3,
   "editor.insertSpaces": true,
   "editor.detectIndentation": true,
   "editor.useTabStops": true,
   "files.autoSave": "afterDelay",
   "files.associations": {
      "*.js": "javascriptreact"
   },
   "editor.formatOnSave": true
}